<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SelectTransactionTypeActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_fragment_white"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present Card"
                        android:textSize="16sp"
                        android:textColor="@color/black">

                    </TextView>




                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/hint">

                </View>






            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:weightSum="3"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:id="@+id/cardSwipeTransaction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/presentcard_icon">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/presentcard_1_icon">

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lLcardlesstransaction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/presentcard_2_icon">

                </ImageView>

            </LinearLayout>

        </LinearLayout>








    </RelativeLayout>











</RelativeLayout>