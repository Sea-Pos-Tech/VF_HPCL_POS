<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_height="50dp"
            android:background="@drawable/homepage_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginStart="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gotoBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/back_icon">

                </ImageView>
            </LinearLayout>


            <TextView
                android:fontFamily="@font/robotomedium"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="CCMS RECHARGE"
                android:textColor="@color/white">

            </TextView>

            <LinearLayout
                android:layout_width="35dp"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/timer"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/_60sdp"
            android:id="@+id/parent_linear_layout"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <RelativeLayout
                android:id="@+id/rlSelectCash"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/rounded_select_backgrnd"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="@font/ptregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CASH"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLSelectCheque"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/rounded_select_backgrnd"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="@font/ptregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CHEQUE"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLSelectNEFT"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/rounded_select_backgrnd"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="@font/ptregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NEFT/RTGS"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true">

                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</layout>