<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.selecttransactiontype.SelectTransactionTypeFargment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/rounded_fragment_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:fontFamily="@font/ptregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Pin"
                    android:layout_marginTop="10dp"
                    android:textSize="22dp"
                    android:textColor="@color/black">

                </TextView>

                <EditText
                    android:fontFamily="@font/ptregular"
                    android:inputType="numberPassword"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:id="@+id/cardPin_editText"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                </EditText>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <com.hpcl_paytm.activity.constants.EnterMobileNoKeyboard
            android:id="@+id/mobileNokeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>


</RelativeLayout>