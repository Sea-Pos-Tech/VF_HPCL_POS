<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backpress"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_aero" />

        <TextView
            android:visibility="gone"
            android:fontFamily="@font/ptregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/backpress"
            android:text="Swipe Card"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/backpress"
            android:layout_marginTop="15dp"
            android:background="#c0c0c0" />
<LinearLayout
    android:layout_below="@+id/view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/debitcardicon"
        tools:ignore="MissingConstraints" />
    <TextView
        android:fontFamily="@font/ptregular"
        android:id="@+id/swipcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Swipe Your Card Here"
        android:textColor="@color/background"
        android:textSize="18sp" />
     <TextView

               android:layout_below="@+id/swipcard"
               android:gravity="center"
               android:layout_gravity="center"
               android:fontFamily="@font/ptbold"
               android:textColor="@color/purple_700"
               android:id="@+id/tvCardNumber"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="visible"
               android:textSize="17sp"
              />
           <TextView
               android:gravity="center"
               android:layout_gravity="center"
               android:fontFamily="@font/ptbold"
               android:layout_below="@+id/tvCardNumber"
               android:textColor="@color/purple_700"
               android:id="@+id/tvName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="17sp"
               android:layout_marginTop="@dimen/_5dp"
              />
           <TextView

               android:gravity="center"
               android:layout_gravity="center"
               android:fontFamily="@font/ptbold"
               android:layout_below="@+id/tvName"
               android:textColor="@color/purple_700"
               android:id="@+id/tvCardType"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="visible"
               android:textSize="17sp"
               android:layout_marginTop="@dimen/_5dp"
              />
</LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/corner_full_rounded_button"
            android:fontFamily="@font/ptregular"
            android:text="DONE">

        </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

</layout>