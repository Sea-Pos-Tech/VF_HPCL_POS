<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="?attr/actionBarSize">


            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gotoBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/back_icon">

                </ImageView>
            </LinearLayout>


            <TextView
                android:fontFamily="@font/ptregular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="35dp"
                android:gravity="center"
                android:textSize="22sp"
                android:lines="1"
                android:textStyle="normal"
                android:text="CCMS BALANCE"
                android:textAllCaps="true"
                android:textColor="@color/white">

            </TextView>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/ptregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTER CTRL CARD NO.:"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="@color/black">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/smokewhite"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    android:layout_height="50dp">

                    <EditText
                        android:fontFamily="@font/ptregular"
                        android:id="@+id/cardNo_EditText"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:maxLength="10"
                        android:inputType="number"
                        android:layout_height="match_parent">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:background="@color/white"
                        android:layout_height="50dp">

                        <TextView
                            android:fontFamily="@font/ptregular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/light_bluenew"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Cancel">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLNext"
                        android:layout_width="0dp"
                        android:focusable="true"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_height="50dp">

                        <TextView
                            android:fontFamily="@font/ptregular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Next">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <com.hpcl_paytm.activity.constants.EnterMobileNoKeyboard
            android:id="@+id/mobileNokeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

</RelativeLayout>