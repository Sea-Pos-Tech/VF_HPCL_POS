<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.transactionsuccess.TransactionSucessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/failedtransaction_icon">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/ptregular"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="TRANSACTION FAILED"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/strokewhite"
            android:layout_height="20dp">

        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/rounded_fragment_white"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="270dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="@font/ptregular"
                    android:id="@+id/tvErrorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="23sp"
                    android:text="Connect Error, Please Check Network"
                    android:textColor="@color/red">

                </TextView>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lLgoToMain"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:background="@drawable/strokelightgreen"
            android:layout_marginRight="35dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/backToMainMenu"
                android:fontFamily="@font/ptregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK TO MAIN MENU"
                android:textSize="18dp"
                android:textColor="@color/light_blue">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</layout>