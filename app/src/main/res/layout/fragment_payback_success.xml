<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.transactionsuccess.TransactionSucessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/tickdialpad_icon">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/ptregular"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="TRANSACTION SUCCESS"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/strokewhite"
            android:layout_height="30dp">

        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/rounded_fragment_white"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No"
                        android:textSize="16sp"
                        android:layout_gravity="left"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999999999"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black">

                    </TextView>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch No"
                        android:textSize="16sp"
                        android:layout_gravity="left"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="57"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black">

                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ROC"
                        android:textSize="16sp"
                        android:layout_gravity="left"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black">

                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center">

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Time"
                        android:textSize="14sp"
                        android:layout_gravity="left"
                        android:textColor="@color/light_blue">

                    </TextView>

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09/05/21 16:44:06"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/light_blue">

                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center">

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Type"
                        android:textSize="14sp"
                        android:layout_gravity="left"
                        android:textColor="@color/light_blue">

                    </TextView>

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="PAYBACK VOID"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="28dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:fontFamily="@font/ptregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_gravity="left"
                        android:textColor="@color/light_blue">

                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="3dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/red"
                            android:background="@drawable/rupee_icon">

                        </ImageView>

                        <TextView
                            android:fontFamily="@font/ptregular"
                            android:id="@+id/rcvAmntText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="500.00"
                            android:textSize="22sp"
                            android:textColor="#ff6666">

                        </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lLgoToMain"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:background="@drawable/strokelightgreen"
            android:layout_marginRight="35dp"
            android:layout_height="50dp">

            <TextView
                android:fontFamily="@font/ptregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK TO MAIN MENU"
                android:textSize="18dp"
                android:textColor="@color/light_blue">

            </TextView>

        </LinearLayout>

    </LinearLayout>













</RelativeLayout>