<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.selecttransactiontype.SelectTransactionTypeFargment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_fragment_white"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="100dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/ptregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CCMS Balance"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textAllCaps="true">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/rupee_icon"
                        android:layout_height="25dp">

                    </ImageView>

                    <EditText
                        android:fontFamily="@font/ptregular"
                        android:background="@null"
                        android:id="@+id/ccmsBalanceAmountText"
                        android:layout_width="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:hint="1000.00"
                        android:textColorHint="@color/black"
                        android:textSize="35sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">

                    </EditText>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/hint">

                </View>




            </LinearLayout>










    </RelativeLayout>











</RelativeLayout>